<h1>Add a tip!</h1>

<%= form_for [@game, @tip] do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <br><br>

  <%= f.label :gameweek %>
  <%= f.collection_select :game_id, Game.all, :id, :gameweek, {:selected => @game.id} %>

  <br><br>

  <%= f.label :player %>
  <%= f.collection_select :player_id, Player.all, :id, :name, prompt: "Select Player" %>

  <%= f.label :price, "Price (Optional) Â£:" %>
  <%= f.number_field :price, pattern: "^\$?[0-9]{1,3}(?:,?[0-9]{3})*(?:\.[0-9]{2})?$" %>

  <br><br>

  Player not listed? <%= link_to "Add a player", new_player_path(@player) %>

  <br><br>

  <%= f.submit %>

<% end %>
